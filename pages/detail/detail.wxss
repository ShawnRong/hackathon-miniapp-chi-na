/* pages/my/index.wxss */
.img {
  width: 100%;
  height: 150px;
}

.block-box {
  display: block;
  padding: 25px 15px;
  text-align: center;
  line-height: 1.2;
}

.title {
  display: block;
  font-size: 18px;
}

.grade {
  display: block;
  font-size: 14px;
  color: #8e8e8e;
  padding-top: 10px;
}

.info {
  padding: 15px;
  line-height: 1.2;
  border-bottom: solid 1px #f6f6f6;
  overflow: hidden;
}

.info.first {
  border-top: solid 1px #f6f6f6;
}

.info .icon {
  float: left;
  width: 20px;
  height: 20px;
}

.info .text {
  display: block;
  margin-left: 28px;
  font-size: 16px;
}

.btn {
  padding: 30px 15px;
  overflow: hidden;
}

.btn .goback,
.btn .setfavorite {
  width: 45%;
  height: 42px;
  line-height: 42px;
  text-align: center;
  font-size: 14px;
  border: solid 1px #f6f6f6;
  border-radius: 4px;
  overflow: hidden;
}

.btn .goback {
  float: left;
}

.btn .goback:active {
  background: #e9eaea;
}

.btn .setfavorite {
  float: right;
  color: #fff;
  background: #1AAD19;
}

.btn .setfavorite:active {
  background: #30b530;
}
