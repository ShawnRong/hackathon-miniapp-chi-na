/* pages/index/index.wxss */
@keyframes scale{0%,100%{transform:scale(1.1);}50%{transform:scale(1.3);}}
@keyframes scale2{
0%{transform:scale(1.1);}
50%{transform:scale(5);opacity:0;}
100%{transform:scale(1.1);opacity:0;}
}

.btn-search {
    position: fixed;
    top: 50%;
    left: 50%;
    width: 150px;
    height: 150px;
    line-height: 150px;
    text-align: center;
    margin-top: -25px;
    margin-left: -75px;
    border-radius: 50%;
    z-index: 99;
    color: #fff;
    background: #29a1f7;
    transition:all .5s;
}

.btn-search:active {
    background: #49adf5;
}

.btn-search .before {
    position:absolute;
    content:'';
    width:100%;
    height:100%;
    box-shadow:inset 0 0 15px 1px #6ebef8;
    border-radius:50%;
    transform:scale(1.1);
    border:1px solid #6ebef8;
    top:-1px;
    left:-1px;
    animation:scale 2s infinite;
}

.location {
    padding: 8px 15px;
    height: 34px;
    line-height: 34px;
    font-size: 16px;
    color: #fff;
    background: #1b83d4;
    overflow: hidden;
}

.location-icon,
.address-icon {
    width: 24px;
    height: 24px;
    margin-top: 4px;
}

.location-icon {
    float: left;
    margin-right: 10px;
}

.address-icon {
    float: right;
    margin-left: 10px;
    font-size: 0;
    background: url('../../image/icon_address_white.png') no-repeat center center;
    background-size: 24px auto;

}

.location-address {
    padding: 0 10px;
    background: #2f8dd6;
    border-radius: 4px;
    overflow: hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
